<%= render 'layouts/navbar' %>
<div class="container">

  <h3>All Gratitudes</h3>

<ul>
  <% reversed_order = Hash[@gratitudes.to_a.reverse] %>
  <% reversed_order.each do |date, grads| %>
    <% params[:date] = date %>
    <%= link_to dayofgratitude_path(params[:date]) do %>
      <h3> <%= date.strftime('%A') %>, <%= date.strftime('%B') %> <%= date.strftime('%d') %> </h3>
    <% end %>
    <% grads.each do |grad| %>
      <%= grad.description %><br>
      <% if !grad.img_url.nil? %>
        <%= image_tag(grad.img_url) %>
      <% end %>
      <br>
    <% end %>
  <% end %>
</div>
