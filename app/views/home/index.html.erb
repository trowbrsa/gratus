<div class="home-background-image">
  <%= render 'layouts/navbar' %>
  <div class="container">
    <div class="home-styling">
      <h3 class="home-head">Welcome, <%= current_user.first_name %>!</h3>

      <table class="home-nav">
        <tr class="click-to-add" data-href='/gratitudes/'>
          <td><i class="material-icons">add_circle</i></td>
          <td style="padding:10px;"><%= link_to 'Add a Gratitude', gratitudes_path %></td>
        </tr>
        <tr class="find-inspiration" data-href='/events/'>
          <td><i class="material-icons">favorite</i></td>
          <td style="padding:10px;"><%= link_to 'Find Inspiration', events_path %></td>
        </tr>
        <tr class="view-calendar" data-href='/calendar/'>
            <td><i class="material-icons">date_range</i></td>
            <td style="padding:10px;"><%= link_to 'View Calendar', calendar_path %></td>
        </tr>
      </table>
    </div>
    <br>
    <br>
    <div class="grad-tracker">
      <div class="col-xs-1 col-sm-1 col-md-3"></div>
      <div class="col-xs-10 col-sm-1 col-md-6">
        <table class="table">
          <div class="home-table-styling">
            <div>
              <h4>Track how often you're posting your gratitudes:</h4>
            </div>
            <tr>
              <th class="grad-stat">Total Recorded</th>
              <th class="grad-stat">Longest Streak</th>
              <th class="grad-stat">Current Streak</th>
            </tr>
            <tr>
              <td class="big-stat"><%= @total_gratitudes %></td>
              <td class="big-stat"><%= @best_streak %> <%= @best_streak_day %></td>
              <td class="big-stat"><%= @streak %> <%= @current_streak_day %></td>
            </tr>
            <div class="col-xs-1 col-sm-1 col-md-3"></div>
          </div>
        </table>
      </div>
    </div>
  </div>
</div>
